@page "/LinearGauge/Tooltip"

@using Syncfusion.EJ2.Blazor.LinearGauge
@using Newtonsoft.Json;

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Tooltip";
    SampleBrowser.CurrentControlName = "LinearGauge";
    SampleBrowser.CurrentControlCategory = "LinearGauge";
    SampleBrowser.CurrentControl = SampleBrowser.Config.LinearGauge;
    SampleBrowser.ActionDescription = new string[] {
        @" <p>
            This sample visualizes the tooltip for pointer in gauge. To see tooltip in action, hover pointer or tap the pointer.
        </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
            This sample demonstrates the measuring scale by using the linear gauge. Tooltip is used to track the pointer value closer to the current mouse position or touch contact. You can show the tooltip for an individual marker or bar pointer by hover or tap on the pointer in touch enabled devices.
        </p>
        <br>
        <p>
            More information about linear gauge can be found in this
            <a target=""_blank"" href=""https://ej2.syncfusion.com/blazor/documentation"">documentation section</a>.
        </p>"
    };
}
@*End:Hidden*@

<div class="control-section">
    <EjsLinearGauge Orientation="Orientation.Horizontal">
        <LinearGaugeContainer Width="140">
            <LinearGaugeContainerBorder Width="2" Color="#a6a6a6"></LinearGaugeContainerBorder>
        </LinearGaugeContainer>
        <LinearGaugeTooltipSettings Enable="true"></LinearGaugeTooltipSettings>
        <LinearGaugeAnnotations>
            <LinearGaugeAnnotation AxisIndex="0" AxisValue="5.4" X="35" Y="-58" ZIndex="1">
                <ContentTemplate>
                    <div><h1 style="font-size:15px; color: #686868; margin-top: -6px">Inches</h1></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
            <LinearGaugeAnnotation AxisIndex="1" AxisValue="16.5" X="50" Y="52" ZIndex="1">
                <ContentTemplate>
                    <div><h1 style="font-size:15px; color: #686868; margin-top: -6px">Centimeters</h1></div>
                </ContentTemplate>
            </LinearGaugeAnnotation>
        </LinearGaugeAnnotations>
        <LinearGaugeAxes>
            <LinearGaugeAxis Maximum="10" Minimum="0">
                <LinearGaugeLine Offset="140"></LinearGaugeLine>
                <LinearGaugeMajorTicks Color="#9E9E9E" Interval="1" Height="20">
                </LinearGaugeMajorTicks>
                <LinearGaugeMinorTicks Color="#9E9E9E" Interval="0.2" Height="10">
                </LinearGaugeMinorTicks>
                <LinearGaugePointers>
                    <LinearGaugePointer Value="5.4" Offset="15" Type="Point.Bar" Color="#ff66b3">
                    </LinearGaugePointer>
                </LinearGaugePointers>
            </LinearGaugeAxis>
            <LinearGaugeAxis OpposedPosition="true" Maximum="0" Minimum="25">
                <LinearGaugeLine Offset="-140"></LinearGaugeLine>
                <LinearGaugeMajorTicks Color="#9E9E9E" Interval="1" Height="20">
                </LinearGaugeMajorTicks>
                <LinearGaugeMinorTicks Color="#9E9E9E" Interval="0.2" Height="10">
                </LinearGaugeMinorTicks>
                <LinearGaugePointers>
                    <LinearGaugePointer Value="16.5" Offset="-15" Type="Point.Bar" Color="#4d94ff">
                    </LinearGaugePointer>
                </LinearGaugePointers>
            </LinearGaugeAxis>
        </LinearGaugeAxes>
    </EjsLinearGauge>
</div>

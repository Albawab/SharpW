@page "/DropDownList/DiacriticsFiltering"

@using Syncfusion.EJ2.Blazor.DropDowns

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Diacritics Filtering";
    SampleBrowser.CurrentControlName = "DropDownList";
    SampleBrowser.CurrentControlCategory = "DropDownList";
    SampleBrowser.CurrentControl = SampleBrowser.Config.DropDownList;
    SampleBrowser.ActionDescription = new string[] {
        @"<p>This sample demonstrates the diacritics filter functionality of the DropDownList. Type the characters ‘gul’ in the DropDownList filterbar and it displays the suggestion list ignoring the diacritics lists.</p>"
    };
    SampleBrowser.Description = new string[] {
       @"<p>
            The DropDownList filtering will ignore the diacritics which makes it easier to filter the results in international characters lists when the <code>IgnoreAccent</code> is enabled.
        </p>
        <p>
            This sample illustrates using the international characters data.
        </p>
        <p>
            More information on the DropDownList diacritics filtering can be found in the
            <a href=""https://ej2.syncfusion.com/blazor/documentation/dropdownlist/filtering/#diacritics-filtering"" target=""_blank""> documentation section</a>.
        </p>"
    };
}
@*End:Hidden*@

<div class="col-lg-12 control-section">
    <div class="control_wrapper">
        <EjsDropDownList TValue="string" Placeholder="Select a value" FilterBarPlaceholder="e.g: gul" AllowFiltering=true IgnoreAccent=@EnableIgnoreAccent DataSource="@Country">
            <DropDownListFieldSettings Value="Name"></DropDownListFieldSettings>
        </EjsDropDownList>
    </div>
</div>

@code{
    public bool EnableIgnoreAccent { get; set; } = true;

    public class Data
    {
        public string Name { get; set; }
    }

    List<Data> Country = new List<Data>
    {
        new Data() { Name = "Aeróbics"},
        new Data() { Name = "Aeróbics en Agua"},
        new Data() { Name = "Aerografía"},
        new Data() { Name = "Águilas"},
        new Data() { Name = "Ajedrez"},
        new Data() { Name = "Ala Delta"},
        new Data() { Name = "Álbumes de Música"},
        new Data() { Name = "Alusivos"},
        new Data() { Name = "Análisis de Escritura a Mano"},
        new Data() { Name = "Dyarbakır"},
        new Data() { Name = "Derepazarı "},
        new Data() { Name = "Gülümsemek "},
        new Data() { Name = "Teşekkürler"},
        new Data() { Name = "Gülhatmi"},
    };
}

<style>
    .control_wrapper {
        width: 300px;
        margin: 0 auto;
        padding-top: 70px;
    }
</style>

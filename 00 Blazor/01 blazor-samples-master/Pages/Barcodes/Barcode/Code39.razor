@page "/Barcodes/Code39"

@using Syncfusion.EJ2.Blazor.BarcodeGenerator

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Code39";
    SampleBrowser.CurrentControlName = "Barcode";
    SampleBrowser.CurrentControlCategory = "Barcode";
    SampleBrowser.CurrentControl = SampleBrowser.Config.Barcode;
    SampleBrowser.ActionDescription = new string[] {
        @" <p>
            This sample visualizes Code 39, a self-checking barcode symbology that consists of uppercase letters, numeric digits, and several special characters. It is often used to present model numbers. Code 39 is widely used in the automotive and defense industries as a standard label.

        </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
            This sample shows how to create the Code 39 self-checking symbology type barcode image. The `Type` property can be used to set the barcode type as `Code39`.
        </p>
        <br>"
    };
}
@*End:Hidden*@

<div class="control-section" style="width: 100%;height: 590px;">
    <div class="center">
        <div class="centercontrol">
            <EjsBarcodeGenerator Width="200px" Height="150px" Mode="@RenderingMode.SVG" Type="@BarcodeType.Code39" Value="SYNCFUSION"></EjsBarcodeGenerator>
        </div>
    </div>
    <div class="allowedText">
        <span style="font-weight: 600;"> Allowed Input characters :</span><span> A-Z, 0-9 </span>
    </div>
</div>

<style>
    .centercontrol {
        margin: auto;
        width: 50%;
        padding-left: 18%;
        height: 50%;
    }

    .allowedText {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        width: auto;
        height: auto;
    }


    .center {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        min-width: 280px;
        width: auto;
        border: 2px solid lightgray;
        min-height: 40%;
        padding-top: 35px;
    }
</style>


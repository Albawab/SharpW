@page "/Barcodes/Code39Extension"

@using Syncfusion.EJ2.Blazor.BarcodeGenerator

@*Hidden:Lines*@
@using ej2_blazor_samples
@{
    SampleBrowser.CurrentSampleName = "Code39Extension";
    SampleBrowser.CurrentControlName = "Barcode";
    SampleBrowser.CurrentControlCategory = "Barcode";
    SampleBrowser.CurrentControl = SampleBrowser.Config.Barcode;
    SampleBrowser.ActionDescription = new string[] {
        @" <p>
            This sample visualizes the model number of an item in the automotive industry. This barcode supports both standard and extended Code 39 barcodes. The extended mode gives access to the full set of ASCII letters.

        </p>"
    };
    SampleBrowser.Description = new string[] {
        @"<p>
            This sample shows how to create the extended Code 39 barcode with an added checksum. The `Type` property can be used to set the barcode type as `Code39Extension`. By default, `enableCheckSum` is set as true, but the checksum can be disabled by assigning false to it.
        </p>
        <br>"
    };
}
@*End:Hidden*@

<div class="control-section" style="width: 100%;height: 590px;">
    <div class="center">
        <div class="centercontrol">
            <EjsBarcodeGenerator Width="200px" Height="150px" Mode="@RenderingMode.SVG" Type="@BarcodeType.Code39Extension" Value="SYNCFUSION"></EjsBarcodeGenerator>
        </div>
    </div>
    <div class="allowedText">
        <span style="font-weight: 600;">Allowed Input characters :</span> This barcode support only ASCII characters.
    </div>
</div>

<style>
    .centercontrol {
        margin: auto;
        width: 50%;
        padding-left: 18%;
        height: 50%;
    }

    .allowedText {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        width: auto;
        height: auto;
    }


    .center {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        min-width: 280px;
        width: auto;
        border: 2px solid lightgray;
        min-height: 40%;
        padding-top: 35px;
    }
</style>

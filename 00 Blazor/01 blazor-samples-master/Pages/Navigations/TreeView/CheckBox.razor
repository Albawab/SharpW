        <EjsTreeView TValue="TreeItem" ShowCheckBox="true">
            <TreeViewFieldsSettings DataSource="@TreeItems" Id="Id" Text="Name" Expanded="Expanded" Child="@("Child")"></TreeViewFieldsSettings>
        </EjsTreeView>
    </div>
</div>


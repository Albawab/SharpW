@page "/"
@namespace BlazorApp1.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorApp1</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="_content/Syncfusion.Blazor/styles/bootstrap4.css" rel="stylesheet" />
    <script>
        window.JsInterop = function () {
            var grid = document.getElementsByClassName('e-grid')[0].ej2_instances[0];
            grid.actionBegin = function (args) {
                //if (args.requestType === 'filterbeforeopen') {
                //    if (args.columnName === 'Freight') {    //for Freight column 
                //        grid.filterModule.filterModule.customFilterOperators.numberOperator = [
                //            { value: 'equal', text: 'Equal' },
                //            { value: 'notequal', text: 'Not Equal' }]    //changed operators before filter open 
                //    }
                //}
                if (args.requestType === 'filterbeforeopen') {
                    if (args.columnName === 'Name') {   //for CustomerID column 
                        grid.filterModule.filterModule.customFilterOperators.stringOperator = [
                            { value: 'equal', text: 'Equal' },
                            { value: 'notequal', text: 'Not Equal' }]
                    }
                }
            }
        } 
    </script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>

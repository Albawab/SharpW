@page "/"

@using Syncfusion.Blazor
@using Syncfusion.Blazor.Data
@using Syncfusion.Blazor.Grids
<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid TValue="Student" DataSource="@Students" AllowPaging="true" Toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Cancel", "Update" })" Height="315">
                <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true"></GridEditSettings>
                <GridEvents OnActionComplete="ActionBeginHandler" TValue="Student"></GridEvents>
                <GridColumns>
                    <GridColumn Field=@nameof(Student.Id) HeaderText="Order ID" TextAlign="TextAlign.Right" Width="120"></GridColumn>
                    <GridColumn Field=@nameof(Student.Naam) HeaderText="Customer Name" Width="150"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>
@code{
    public static List<Student> Students = new List<Student>();

    protected override void OnInitialized()
    {
        Students = Enumerable.Range(1, 2).Select(x => new Student()
        {
            Id = 1000 + x,
            Naam = (new string[] { "ALFKI", "ANANTR", "ANTON", "BLONP", "BOLID" })[new Random().Next(5)],
        }).ToList();
    }
    public void ActionBeginHandler(ActionEventArgs<Student> args)
    {
        // Here you can customize your code
    }
}

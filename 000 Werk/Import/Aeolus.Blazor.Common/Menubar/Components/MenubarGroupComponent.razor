<label>
    <SfDropDownButton Content="@Tool.Titel">
        <DropDownButtonItems>
            @if (Tool.ToolMenuItems != null)
            {
                @foreach (var item in Tool.ToolMenuItems)
                {
                    <DropDownButtonItem Text="@item.Titel" IconCss="e-ddb-icons e-dashboard"></DropDownButtonItem>
                }
            }
        </DropDownButtonItems>
    </SfDropDownButton>
</label>
@code {
    [Parameter]
    public dynamic Tool { get; set; }
}

<style>
    label .e-dropdown-btn {
        font-family: "Montserrat",sans-serif;
        font-weight: bold;
        background-color: rgb(20,118,173);
        height: 25px;
        max-height: 25px;
        width: 50px;
        border: none;
        padding: 0px;
        padding-bottom: 3px;
        margin-left: 7px;
        color: white;
        font-size: 14px;
    }
</style>
@page "/clientPage"

@using HenE.Aeolus.Identity.Manager.Client.Models
@using HenE.Aeolus.Identity.Manager.Client.Services

@{
    RenderFragment renderFragment = builder =>
    {
        builder.OpenComponent<ListAndItemsComponent>(0);
        builder.AddAttribute(1, "TypeObject", model);
        builder.AddAttribute(2, "Service", Service);
        builder.AddAttribute(3, "ToolsMenuSevice", toolsMenuSevice);
        builder.CloseComponent();
    };

    @renderFragment

}

@code {
    IAppService Service;
    IMenubarSevice toolsMenuSevice;
    ClientModel model;

    protected override void OnInitialized()
    {
        Service = new InternalClientsService();
        toolsMenuSevice = new InternalToolsMenuClientsService();
        model = new ClientModel();
    }
}

@page "/userPage"

@using HenE.Aeolus.Identity.Manager.User.Models
@using HenE.Aeolus.Identity.Manager.User.Services

@{
    RenderFragment renderFragment = builder =>
    {
        builder.OpenComponent<ListAndItemsComponent>(0);
        builder.AddAttribute(1, "TypeObject", model);
        builder.AddAttribute(2, "Service", Service);
        builder.AddAttribute(3, "ToolsMenuSevice", toolsMenuSevice);
        builder.CloseComponent();
    };

    @renderFragment

}

@code {
    IAppService Service;
    IToolsMenuSevice toolsMenuSevice;
    UserModel model;

    protected override void OnInitialized()
    {
        Service = new InternalUsersService();
        toolsMenuSevice = new InternalToolsMenuService();
        model = new UserModel();
    }
}
